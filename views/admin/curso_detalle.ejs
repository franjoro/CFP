<link rel="stylesheet" href="/static/vendor/datatables/datatables.min.css" />
<%- include('../partials/header.admin.ejs'); %>
<div class="container-fluid">
  <div class="row container-fluid">
    <div class="col-lg-12">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <a
            href="/admin/cursos/<%= programa %>"
            class="btn btn-success btn-sm float-left d-inline"
            ><i class="fas fa-arrow-left"></i
          ></a>
          <button class="btn btn-warning btn-sm float-right d-inline "> Editar </button>

        </div>
        <div class="card-body">
          <div class="card shadow mb-3">
            <div class="card-body">
              <h4><%= curso.Nombre %></h4>
              <div class="row">
                <div class="col-6">
                  <p>
                    <b>Fecha inicio:</b> <%=
                    curso.Date_inicio.toLocaleDateString() %> <br />
                    <b>Fecha final:</b> <%= curso.Date_fin.toLocaleDateString()
                    %> <br />
                    <b>Orden de inicio:</b> <%= curso.Orden %> <br />
                    <b>Agrupación:</b> <%= curso.Agrupacion %><br />
                  </p>
                </div>
                <div class="col-6">
                  <p>
                    <b>Horario:</b> <%= curso.Horario %> <br />
                    <b>Costo Por alumno:</b> $<%= curso.CostoAlumno %> <br />
                    <b>Factura:</b> <%= curso.Factura %> <br />
                    <b>Profesor:</b> <%= curso.instructor %> <br />
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row container-fluid">
    <div class="col-lg-12">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary d-inline">Empresas</h6>
          <button class="btn btn-sm btn-success d-inline float-right">
            Agregar Empresa
          </button>
        </div>
        <div class="card-body row">
          <% data.forEach( (element) => { %>

          <div class="col-md-3">
            <div class="card shadow mb-3">
              <div class="card-body">
                <h5><%= element.Empresa %></h5>
                <button class="btn btn-sm btn-info">Documentos</button>
              </div>
            </div>
          </div>
          <div class="col-md-9">
            <div class="card shadow mb-3">
              <div class="card-body">
                <h5 class="text-dark d-inline">Participantes</h5>
                <button class="btn btn-sm btn-success d-inline float-right">
                  Agregar participante
                </button>
                <hr />
                <table
                  class="table table-bordered"
                  width="100%"
                  cellspacing="0"
                >
                  <thead>
                    <tr>
                      <th>DUI</th>
                      <th>Participante</th>
                      <th>Teléfono</th>
                      <th>Email</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% element.Alumnos.forEach( (alumno) => { %>
                    <tr>
                      <td><%= alumno.DUI %></td>
                      <td><%= alumno.Nombre %></td>
                      <td><%= alumno.Telefono %></td>
                      <td><%= alumno.Email %></td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /.container-fluid -->
<%- include('../partials/footer'); %>
