<link rel="stylesheet" href="/static/vendor/datatables/datatables.min.css" />
<%- include('../partials/header.admin.ejs'); %>
<div class="container-fluid">
  
  <div class="row container-fluid">
    <div class="col-lg-12">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <a href="/admin/cursos/<%= programa%>" class="btn btn-success btn-sm float-left d-inline"><i class="fas fa-arrow-left"></i></a>

        </div>
        <div class="card-body">
            <%if(!data.length) {%> 
              <h5>No existen cursos Finalizados</h5>              
            <%}else{%> 
            <h5>Cursos finalizados:</h5>
            <% } %>
            <div class="card shadow mb-3">
              <div class="card-body">
                <table id="datatable" class="table table-bordered" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Código de curso</th>
                      <th>Nombre</th>
                      <th>Instructor</th>
                      <th>Orden de inicio</th>
                      <th>Agrupación</th>
                      <th>Ver</th>
                    </tr>
                  </thead>
                  <tbody>
                      <% for(var i=0; i<data.length; i++) {%>
                        <tr>
                            <td><%= data[i].Codigo_curso %> </td>
                            <td><%= data[i].Nombre %> </td>
                            <td><%= data[i].instructor %></td>
                            <td><%= data[i].Orden %></td>
                            <td><%= data[i].Agrupacion %></td>
                            <td><button class="btn btn-sm btn-info">Ver</button></td>
                        </tr>
                      <% } %>
                  </tbody>
                </table>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /.container-fluid -->
<%- include('../partials/footer'); %>
        <!-- Page level plugins -->
        <script src="/static/vendor/datatables/dataTables.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
        <!-- Page level custom scripts -->
        <script>
           $("#datatable").DataTable()
        </script>