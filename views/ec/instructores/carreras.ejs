<%- include('../../partials/header.admin.ejs'); %>
  <div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between">
      <h4 class="mb-0 text-gray-800">Administraci贸n de notas empresa centro</h4>
    </div>
    <p><span class="font-weight-bold"> Indicaciones: </span> A continuaci贸n se mostraran las unidades que tiene asiganadas, por favor seleccione tomando en cuenta el grupo y el m贸dulo </p>
     
            <% dataOrdenada.forEach( element=> { %>



              <%  if(typeof  element.Carrera !== 'undefined'){ %>
              <div class="card shadow mb-3">
                <div class="card-body table-responsive">
                  <h4 class="text-secondary">
                    <i class="fas fa-angle-right"></i>  <%= element.Carrera%> - <%= element.grupo%>
                  </h4>
                  <hr>
                  <div class="row">
                    <%  element.unidades.forEach( unidad=> { %>
                      <div class="col-md-4">
                        <div class="card shadow mb-3">
                          <div class="card-body ">
                            <a href="/admin/ec/evaluaciones/<%=unidad.id%>/<%=unidad.idGrupo%>">
                             <h4 class="text-primary"><i class="fas fa-play"></i> <%= unidad.Nombre %></h4>
                             <hr>
                             <p class="text-dark m-0"><span class="font-weight-bold">M贸dulo: </span><%= unidad.modulo %> </p>
                             <p class="text-dark m-0"><span class="font-weight-bold">Fecha fin: </span><%= unidad.fechaFin %></p>
                            </a>
                          </div>
                        </div>
                      </div>
                      <%}) %>
                  </div>
                </div>
              </div>
              <%}else{ %>
                <div class="alert alert-info" role="alert">
                  No existen unidades asignadas. Por favor contacte al administrador.
                </div>
              <%} }) %>
  </div>
