  rel="stylesheet"
  href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css"
/>
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />
<%- include('../partials/header.admin.ejs'); %>
<div class="container-fluid">
  <div class="row container-fluid">
    <div class="col-lg-12">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <a
            href="/admin/cursos/<%= programa %>"
            class="btn btn-success btn-sm float-left d-inline"
            ><i class="fas fa-arrow-left"></i
          ></a>
        </div>
        <div class="card-body">
          <p>
            <span class="font-weight-bold">Nota: </span> Algunos datos podran
            ser visualizados por el participante al momento de aplicar en la
            oferta.
          </p>
          <div class="card shadow mb-3">
            <div class="card-body">
              <form id="form">
                <h6 class="lead">
                  Registro de nueva oferta - cursos para no cotizantes
                </h6>
                <div class="form-row">
                  <div class="col-md-12">
                    <label class="text-dark">Nombre de la oferta</label>
                    <input
                      type="text"
                      name="nombre"
                      id="nombre"
                      class="form-control"
                      placeholder="Ej: Piezas gráficas"
                    />
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-md-3">
                    <label class="text-dark">Fecha de inicio</label>
                    <input
                      type="text"
                      name="inicio"
                      id="inicio"
                      class="form-control"
                      placeholder="00-00-0000"
                    />
                  </div>
                  <div class="col-md-3">
                    <label class="text-dark">Fecha de finalización</label>
                    <input
                      type="text"
                      name="fin"
                      id="fin"
                      class="form-control"
                      placeholder="00-00-0000"
                    />
                  </div>
                  <div class="col-md-3">
                    <label class="text-dark">Horarios</label>
                    <input
                      type="text"
                      name="nombre"
                      id="nombre"
                      class="form-control"
                      placeholder="De 00:00 A 00:00"
                    />
                  </div>
                  <div class="col-md-3">
                    <label class="text-dark">Costo por alumno</label>
                    <input
                      type="text"
                      name="nombre"
                      id="nombre"
                      class="form-control"
                      placeholder="$0.00"
                    />
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-md-12">
                    <label class="text-dark">Descripción del curso</label>
                    <textarea
                      name="descripcion"
                      id="descripcion"
                      class="form-control"
                      cols="30"
                      rows="4"
                    ></textarea>
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-md-12">
                    <label class="text-dark">Requisitos del participante</label>
                    <textarea
                      name="descripcion"
                      id="descripcion"
                      class="form-control"
                      cols="30"
                      rows="2"
                    ></textarea>
                  </div>
                </div>
                <label class="text-dark">Contenidos del curso</label>
                <div id="editor"></div>
                <input type="hidden" name="contenidos" id="contenidos">
                <hr>
                <input type="submit" value="Enviar" class="form-control btn btn-primary">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- /.container-fluid -->
