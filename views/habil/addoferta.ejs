<%- include('../partials/header.admin.ejs'); %>
<div class="container-fluid">
  <div class="row container-fluid">
    <div class="col-lg-12">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <a
            href="/admin/cursos/<%= programa %>"
            class="btn btn-success btn-sm float-left d-inline"
            ><i class="fas fa-arrow-left"></i
          ></a>
        </div>
        <div class="card-body">
          <div class="card shadow mb-3">
            <div class="card-body"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="modal_compartir"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          Compartir edición de archivos
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a
              class="nav-link active"
              id="home-tab"
              data-toggle="tab"
              href="#enlace"
              role="tab"
              aria-controls="home"
              aria-selected="true"
              >Compartir por enlace</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              id="profile-tab"
              data-toggle="tab"
              href="#correo"
              role="tab"
              aria-controls="profile"
              aria-selected="false"
              >Enviar por correo electrónico</a
            >
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <div
            class="tab-pane fade show active p-4"
            id="enlace"
            role="tabpanel"
            aria-labelledby="home-tab"
          >
            <label>Copiar enlace para compartir:</label>
            <input type="text" class="form-control" id="link" />
            <button class="btn btn-primary my-3 float-right" id="btnCopy">
              Copiar enlace para compartir
            </button>
          </div>
          <div
            class="tab-pane fade p-4"
            id="correo"
            role="tabpanel"
            aria-labelledby="profile-tab"
          >
            <div class="form-group">
              <label for="correo">Correo Electrónico</label>
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="name@example.com"
              />
            </div>
            <div class="form-group">
              <label for="mensaje">Mensaje</label>
              <textarea class="form-control" id="mensaje" rows="3"></textarea>
            </div>
            <button class="btn btn-success float-right" id="btnCorreo">
              Enviar correo
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

